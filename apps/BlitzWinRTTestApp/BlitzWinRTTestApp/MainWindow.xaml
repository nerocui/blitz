<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="BlitzWinRTTestApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BlitzWinRTTestApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BlitzWinRTTestApp"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <NavigationView x:Name="nvSample" SelectionChanged="nvSample_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    Content="Gallery"
                    Icon="Page"
                    IsSelected="True"
                    Tag="Gallery" />
                <NavigationViewItem
                    Content="Single Page"
                    Icon="Page"
                    Tag="SinglePage" />
                <NavigationViewItem
                    Content="Cards Page"
                    Icon="Page"
                    Tag="CardsPage" />
            </NavigationView.MenuItems>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="100" />
                </Grid.RowDefinitions>
                <Frame x:Name="contentFrame" Grid.Row="0" />
                <Grid Grid.Row="1" Padding="12">
                    <ScrollViewer>
                        <StackPanel>
                            <ToggleSwitch Header="Debug Overlay" IsOn="{x:Bind Settings.DebugOverlayEnabled, Mode=TwoWay}" />
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>

        </NavigationView>
    </Grid>
</Window>
