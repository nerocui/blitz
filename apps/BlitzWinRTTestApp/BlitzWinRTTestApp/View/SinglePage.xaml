<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="BlitzWinRTTestApp.View.SinglePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:blitz="using:Blitz"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BlitzWinRTTestApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <blitz:BlitzView DebugOverlayEnabled="{x:Bind Settings.DebugOverlayEnabled, Mode=OneWay}" HTML="{x:Bind HTML}" />
    </Grid>
</Page>
