<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="MarkdownTest.MarkdownPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MarkdownTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Explicitly set width and height to ensure we have valid dimensions -->
        <SwapChainPanel x:Name="scpD2D" Grid.Row="0"
                         HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                         Margin="0" />
        
        <!-- Performance Monitor Panel -->
        <Grid Grid.Row="1" Background="{ThemeResource SystemControlAcrylicElementBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Performance Display -->
            <Border x:Name="perfPanel" Grid.Column="0" Visibility="Collapsed"
                    Background="#33000000" BorderBrush="#55777777" BorderThickness="1" 
                    Padding="10" Margin="10,5,10,5" CornerRadius="4">
                <TextBlock x:Name="tbPerf" Foreground="#FFAAFFAA" FontFamily="Consolas" FontSize="12"
                           TextWrapping="Wrap">
                    Loading performance data...
                </TextBlock>
            </Border>
            
            <!-- Toggle Button -->
            <Button x:Name="btnTogglePerf" Grid.Column="1" Margin="0,5,10,5"
                    Content="Show Performance" Click="BtnTogglePerf_Click"/>
        </Grid>
    </Grid>
</Page>
